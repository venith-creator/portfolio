{
  "build": {
    "useNixpacks": true,
    "builder": "nixpacks",
    "buildCommand": "python manage.py collectstatic --noinput"
  },
  "deploy": {
    "startCommand": "gunicorn backend.wsgi:application --bind 0.0.0.0:$PORT --workers 2 --timeout 180 --access-logfile - --error-logfile - --log-level info --preload"
  }
}